.bg
	height: 100%
	position: fixed
	width: 100%
	top: 0
	z-index: -1
	
	.img
		width: 25%
		height: 20%
		background-size: cover
		float:left

		&.off
			opacity: .2
			// opacity: .6
			// -webkit-filter: blur(5px);

		&.on
			box-shadow: 0px 0px 40px 10px #777
			z-index: 1
			height: 40%
			position: absolute
			bottom: 0
			right: 25%

@media (max-width: 767px)
	.bg .img.on
		width: 50%
		right:0